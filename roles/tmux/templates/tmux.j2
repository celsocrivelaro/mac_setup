unbind C-b
set -g prefix C-a
#set -g default-command /bin/zsh

# Automatically set window title
set-window-option -g automatic-rename on
set-option -g set-titles on

# No delay for escape key press
set -sg escape-time 0

# 0 is too far from ` ;)
set -g base-index 1
set -g pane-base-index 1

#### BINDS ####
# bind a reload key
bind r source-file ~/.tmux.conf \; display-message "Config reloaded.."

# Send Ctrl + A a running program by pressing twice
bind C-a send-prefix

# splitting panes with | and -
bind '\' split-window -h
bind '-' split-window -v

# moving between panes with Prefix h,j,k,l
bind h select-pane -L 
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# resizing panes
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 6

# invoke reattach-to-user-namespace every time a new window/pane opens
set-option -g default-command "reattach-to-user-namespace -l zsh"

set -g mouse on
bind -n WheelUpPane if-shell -F -t = "#{mouse_any_flag}" "send-keys -M" "if -Ft= '#{pane_in_mode}' 'send-keys -M' 'select-pane -t=; copy-mode -e; send-keys -M'"
bind -n WheelDownPane select-pane -t= \; send-keys -M

#### COLOUR
# vim colors
# https://stackoverflow.com/questions/18600188/home-end-keys-do-not-work-in-tmux
set -g default-terminal "screen-256color"

# default statusbar colors
set-option -g status-style fg=colour136,bg=colour235

set-option -g status-justify centre

setw -g monitor-activity on
set -g visual-activity on

# default window title colors
set-window-option -g window-status-style fg=default,bg=default

# active window title colors
set-window-option -g window-status-current-style fg=white,bg=red

# active pane colors
set-option -g pane-border-style fg=green,bg=black
set-option -g pane-active-border-style fg=colour166,bg=default

# message text
# bg base02, fg orange
set-option -g message-style fg=colour166,bg=colour235

# pane number display
set-option -g display-panes-active-colour colour33 #blue
set-option -g display-panes-colour colour166 #orange

# clock
set-window-option -g clock-mode-colour colour64 #green

