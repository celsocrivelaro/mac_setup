if [ -e "$(ls $HOME/.alias_*)" ]
then
  for file in $(ls $HOME/.alias_*)
  do
    source $file
  done
fi

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="maran"

# sensitive completion must be off. _ and - will be interchangeable.
HYPHEN_INSENSITIVE="true"

# Uncomment the following line to display red dots whilst waiting for completion.
COMPLETION_WAITING_DOTS="true"

# Uncomment the following line if you want to change the command execution time
# stamp shown in the history command output.
# The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
HIST_STAMPS="dd.mm.yyyy"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
#plugins=(osx git rails ruby docker docker-compose bundler git-extras rbenv)
plugins=(osx git rails ruby docker docker-compose git-extras git-flow gitfast vim-mode zsh-autosuggestions zsh-syntax-highlighting rbenv)

# syntax highlight
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# User configuration
export PATH="/usr/local/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

source $ZSH/oh-my-zsh.sh

# LS colors
export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

# Docker aliases
alias docker_rm_containers='docker rm --force $(docker ps -qa)'
alias docker_rm_images='docker rmi $(docker images -q)'

# personal repos
alias blog='cd $HOME/repos/personal/blog; v'
alias changelog='cd $HOME/repos/personal/changelog; v README.md'
alias diario='cd $HOME/repos/personal/diario; v'
alias mac_setup='cd $HOME/repos/personal/mac_setup; v'

# aliases
alias top='htop'
alias df='df -h'
alias ls='ls -lha'
alias -g G='| grep'
alias v='vim'
alias json='jq'
alias sed='gsed'

# nvim
export VIM="~/.vim"
export VIMRUNTIME='/usr/local/share/vim/vim80'

# ruby/rails
alias spec="bundle exec rspec spec"

# tmux
export ZSH_TMUX_AUTOSTART=true
export ZSH_TMUX_AUTOSTART_ONCE=false
export ZSH_TMUX_FIXTERM=false
export ZSH_TMUX_ITERM2=true
export ZSH_TMUX_AUTOCONNECT=false

export NVM_DIR="$HOME/.nvm"


